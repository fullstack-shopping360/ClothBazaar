@model ClothBazaar.Entities.Category
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form method="post">
    <input type="hidden" name="ID" value="@Model.ID"/>
    <label>Name</label>
    <input name="Name" value="@Model.Name" type="text" />
    <br />
    <label>Description</label>
    <input name="Description" value="@Model.Description" type="text" />
    <br />
    <button type="submit">Submit</button>
</form>